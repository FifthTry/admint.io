-- component recent-post:
caption title:
body body:
string link:
optional ftd.image-src thumbnail:
optional string timestamp:
optional string comments: No comments

-- ftd.column:
width: fill-container

-- ftd.column:
if: { recent-post.thumbnail == NULL }
width: fill-container

-- ftd.text: $recent-post.title
role: $fonts.roboto-18
color: $inherited.colors.custom.nine
link: $recent-post.link

-- ftd.text: 
role: $fonts.roboto-14
color: $inherited.colors.cta-secondary.disabled
margin-bottom.px: 10

$recent-post.body

-- end: ftd.column

-- ftd.column:
if: { recent-post.thumbnail != NULL }
width: fill-container

-- ftd.image:
src: $recent-post.thumbnail
width: fill-container
height: auto

-- ftd.text: $recent-post.title
role: $fonts.montserrat-18
color: $inherited.colors.custom.four
link: $recent-post.link
margin-top.px: 20

-- ftd.row:
margin-bottom.px: 13
spacing.fixed.px: 6

-- ftd.text: $recent-post.timestamp
role: $fonts.montserrat-15-19
color: $fonts.adadad

-- ftd.text: /
role: $fonts.montserrat-15-19
color: $fonts.adadad

-- ftd.text: $recent-post.comments
role: $fonts.montserrat-15-19
color: $fonts.adadad

-- end: ftd.row

-- ftd.text: 
role: $fonts.montserrat-14-19
color: #020101a1
margin-bottom.px: 10

$recent-post.body

-- button-small: Read More
link: $recent-post.link

-- end: ftd.column

-- end: ftd.column

-- end: recent-post










