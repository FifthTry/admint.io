-- component post-list:
ftd.ui list articles:
ftd.ui list side-bar:
children search-bar:
boolean post-page: false

-- ftd.column:
width: fill-container
background.solid: $inherited.colors.background.step-1
align-content: center

-- ftd.column:
width: fill-container
max-width.fixed.px: 1140

-- ftd.row:
if: { ftd.device != "mobile" }
width: fill-container

-- ftd.column:
width.fixed.percent: 66.66

-- ftd.column:
width: fill-container
children: $post-list.search-bar

-- end: ftd.column

-- ftd.column:
width: fill-container
children: $post-list.articles
padding.px: 30
padding.px if { $post-list.post-page }: 10

;; all short-articles goes here

-- end: ftd.column

-- end: ftd.column

-- ftd.column:
width.fixed.percent: 33.33
children: $post-list.side-bar
background.solid: $inherited.colors.background.base
background.solid if { !$post-list.post-page }: $inherited.colors.background.base
background.solid if { $post-list.post-page }: $inherited.colors.background.step-1
border-radius.px: 20
padding.px if { !$post-list.post-page }: 25
padding.px if { $post-list.post-page }: 10
height: fill-container

;; recent post side-bar goes here

-- end: ftd.column

-- end: ftd.row

-- ftd.column:
if: { ftd.device == "mobile" }
width: fill-container

-- ftd.column:
width: fill-container
padding.px: 10

-- ftd.column:
width: fill-container
children: $post-list.search-bar

-- end: ftd.column

-- ftd.column:
width: fill-container
children: $post-list.articles

;; all short-articles goes here

-- end: ftd.column

-- end: ftd.column

-- ftd.column:
width: fill-container
children: $post-list.side-bar
background.solid if { !$post-list.post-page }: $inherited.colors.background.base
background.solid if { $post-list.post-page }: $inherited.colors.background.step-1
border-radius.px: 20
padding.px if { !$post-list.post-page }: 25 
padding.px if { $post-list.post-page }: 10
height: fill-container

;; recent post side-bar goes here

-- end: ftd.column

-- end: ftd.column

-- end: ftd.column

-- end: ftd.column

-- end: post-list










